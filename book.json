{
  "language": "ja",
  "title": "マイクロフロントエンド入門",
  "description": "マイクロフロントエンドの入門書です。",
  "plugins": [
    "anchors",
    "back-to-top-button",
    "collapsible-chapters",
    "expand-active-chapter",
    "hide-published-with",
    "intopic-toc",
    "image-captions",
    "navigator",
    "-highlight",
    "sunlight-highlighter",
    "uml"
  ],
  "pluginsConfig": {
    "image-captions": {
      "caption": "Fig. _BOOK_IMAGE_NUMBER_ _CAPTION_",
      "align": "center"
    },
    "sunlight-highlighter": {
      "lineNumbers": true
    }
  },
  "styles": {
    "website": "styles/website.css",
    "ebook": "styles/ebook.css",
    "pdf": "styles/pdf.css",
    "mobi": "styles/mobi.css",
    "epub": "styles/epub.css"
  }
}
